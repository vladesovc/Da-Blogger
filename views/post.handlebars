<div class="text-center">
    <h2>{{title}}</h2>
    <p>{{content}}</p>
    <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <h3>Enter Comment:</h3>

        <form class="form new-project-form">
            <div class="form-group">
                <input class="form-input" type="hidden" id="post-id" value="{{id}}" />
            </div>

            <div class="form-group">
                <label for="comments">Comments</label>
                <textarea class="form-input" id="comments" name="project-desc"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>

    {{#if comments.length}}
    <div class="col-md-6 project-list">
        <h3>Comments:</h3>

        {{#each comments}}
        <div class="row mb-2">{{comment}}
            <p>Created by {{user.name}} on {{format_date date_created}}</p>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>

<script src="/public/js/post.js"></script>