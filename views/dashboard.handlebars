<div class="col-md-6">
    <h3>Enter New Blog Post:</h3>

    <form class="form new-project-form">
        <div class="form-group">
            <input class="form-input" type="hidden" id="post-id" value="{{id}}" />
        </div>

        <div class="form-group">
            <label for="post-title">Post Title:</label>
            <input type="text" id="post-title" name="post-title" value="{{title}}">
        </div>
        <div class="form-group">
            <label for="post-content">Post Content:</label>
            <textarea id="post-content" name="post-content" value="{{content}}"></textarea>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </form>
</div>


<script src="/public/js/post.js"></script>